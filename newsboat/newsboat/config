# general settings
auto-reload yes
max-items 50

# unbind keys
unbind-key j
unbind-key k
unbind-key J
unbind-key K
unbind-key g # bound to `sort` by default
unbind-key G # bound to `rev-sort` by default

# bind keys - vim style
bind-key h quit
bind-key j down
bind-key k up
bind-key l open
bind-key g home
bind-key G end

# solarized
color background         default   default
color listnormal         default   default
color listnormal_unread  default   default
color listfocus          black     cyan
color listfocus_unread   black     cyan
color info               default   black
color article            default   default

# highlights
color background default default
color listnormal green default
#color listnormal_unread default default 
color listfocus color16 cyan
color listfocus_unread color16 cyan
color info default black
color article green default bold
color listnormal_unread default default
#color listfocus blue default reverse bold
#color listfocus_unread blue default reverse bold

highlight article "(^Feed:.*|^Title:.*|^Author:.*)" blue default
highlight article "(^Link:.*|^Date:.*)" default default
highlight article "https?://[^ ]+" blue default

highlight article "^(Title):.*$" red default bold
highlight article "^(Feed):.*$" blue default
highlight article "\\[[0-9][0-9]*\\]" magenta default bold
highlight article "\\[image\\ [0-9]+\\]" green default bold
highlight article "\\[embedded flash: [0-9][0-9]*\\]" green default bold
highlight article ":.*\\(link\\)$" cyan default
highlight article ":.*\\(image\\)$" blue default
highlight article ":.*\\(embedded flash\\)$" magenta default
